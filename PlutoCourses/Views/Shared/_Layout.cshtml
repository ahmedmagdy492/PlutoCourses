                </div>

                <nav class="nav-menu d-none d-lg-block">
                    <ul>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "active" })</li>
                            <li>@Html.ActionLink("Login", "Login", "Auth")</li>
                            <li>@Html.ActionLink("Register", "Register", "Auth")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("My Courses", "MyCourses", "User", null, new { @class = "active" })</li>
                            <li>@Html.ActionLink(User.Identity.Name, "Index", "User")</li>
                            <li>@Html.ActionLink("Log out", "Logout", "Auth")</li>
                        }
                    </ul>
                </nav><!-- .nav-menu -->

            </div>
